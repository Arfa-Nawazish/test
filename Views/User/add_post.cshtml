 @Html.Partial("_header");

<body>

@*<div class="loader"><div class="loader_html"></div></div>*@

<div id="wrap">
	
	<div class="breadcrumbs">
		<section class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Add Post</h1>                                                   @*Ask Question*@
				</div>
				<div class="col-md-12">
					<div class="crumbs">
						<a href="#">Home</a>
						<span class="crumbs-span">/</span>
						<a href="#">Pages</a>
						<span class="crumbs-span">/</span>
						<span class="current">Add Post</span>
					</div>
				</div>
			</div><!-- End row -->
		</section><!-- End container -->
	</div><!-- End breadcrumbs -->
	
	<section class="container main-content">
		<div class="row">
			<div class="col-md-9">
				<form action="~/User/addPostToDB" method="post" enctype="multipart/form-data" runat="server">
				<div class="page-content ask-question">
					<div class="boxedtitle page-title"><h2>Add Post</h2></div>                @*Ask Question*@
					<div class="form-style form-style-3" id="question-submit">
						<form action="~/User/addPostToDB" method="post" enctype="multipart/form-data">
							<div class="form-inputs clearfix">
								<p>
									<label class="required">Title<span>*</span></label>
									<input type="text" id="question-title" name="title">
									<span class="form-description">Please choose an appropriate title.</span>
								</p>

                                <p>
									<label class="required">Phone Number<span>*</span></label>
									<input type="text" id="question-title" name="phoneNumber">
									<span class="form-description">Enter Phone Number</span>
								</p>

								<p>
									<label class="required">Category<span>*</span></label>
										<select name="category">
											<option value="">Select a Category</option>
											<option value="1">Buy/sell</option>
											<option value="2">Return Me</option>
										</select>									
									<span class="form-description">Please choose the appropriate section.</span>
								</p>
																
								<label>Attachment</label>
								<div class="fileinputs">
									<input type="file" class="file" name="image">
									<div class="fakefile">
										<button type="button" class="button small margin_0">Select file</button>
										<span>Browse</span>
									</div>
								</div>
								

							</div>
							<div id="form-textarea">
								<p>
									<label class="required">Details<span>*</span></label>
									<textarea id="question-details" aria-required="true" cols="58" rows="8" name="detail"></textarea>
									<span class="form-description">Type the description thoroughly and in detail .</span>
								</p>
							</div>
							<p class="form-submit">
								<input type="submit" id="publish-question" value="Publish" class="button color small submit">
							</p>
						</form>
					</div>
				</div><!-- End page-content -->
                </form>
			</div><!-- End main -->
			@Html.Partial("_sideBar");<!-- End sidebar -->
		</div><!-- End row -->
	</section><!-- End container -->
	
	@Html.Partial("_footer");

</body>
</html>