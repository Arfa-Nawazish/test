@Html.Partial("_header")
<body>

@*<div class="loader"><div class="loader_html"></div></div>*@

<div id="wrap">
		
	<div class="breadcrumbs">
		<section class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Return Me</h1>
				</div>
				<div class="col-md-12">
					<div class="crumbs">
						<a href="#">Home</a>
						<span class="crumbs-span">/</span>
						<a href="#">Pages</a>
						<span class="crumbs-span">/</span>
						<span class="current">Return Me

						</span>
					</div>
				</div>
			</div><!-- End row -->
		</section><!-- End container -->
	</div><!-- End breadcrumbs -->
    
    <section class="container main-content">
		<div class="row">
			<div class="col-md-9">
				
				<div class="tabs-warp question-tab">
		           
		            <div class="tab-inner-warp">
						<div class="tab-inner">
                            @{
                                if (ViewBag.data!=null)
                                {
                                foreach(var d in ViewBag.data)
                                {
                                    if(d.image!=null)
                                    {
                                        var base64 = Convert.ToBase64String(d.image.ToArray());
                                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
							            <article class="question question-type-normal">
                                            <div class="question-author">
									            <a href="#" original-title="ahmed" class="question-author-img tooltip-n"><span></span><img alt="" src="~/images/profilepic.jpg" @*src="http://2code.info/demo/html/ask-me/images/demo/admin.jpeg"*@></a>
								            </div>
                                            <h2>
                                                <p>@d.username</p>
                                            </h2>
                                            <h2>
									            <a href="~/User/return_me_single_post/@d.Id">@d.title</a>
								            </h2>
								            <a href="#"><img src = "@imgSrc" width="50%" alt="" /></a>

                                            <a class="question-report" href="~/User/editPost/@d.Id">Edit</a>
								            <div class="question-type-main"><a href="~/User/deleteLostthing/@d.Id">Delete</a></div>
                                        
								            <div class="question-inner">
									            <div class="clearfix"></div>
									            <p class="question-desc"><br>@d.description</p>
									        
									            <span class="question-date"><i class="icon-time"></i>@d.time</span>
									            <span class="question-comment"><a href="#"><i class="icon-comment"></i>@d.date</a></span>
									            <div class="clearfix"></div>
								            </div>
							            </article>
                                    <a class="button small color signup" href="~/User/deleteLostthing/@d.Id" >Found</a>
                                    }
                                    else
                                    {
                                        <article class="question question-type-normal">
                                            <div class="question-author">
									            <a href="#" original-title="ahmed" class="question-author-img tooltip-n"><span></span><img alt="" src="~/images/profilepic.jpg" @*src="http://2code.info/demo/html/ask-me/images/demo/admin.jpeg"*@></a>
								            </div>
                                            <h2>
                                                <p><br></p>
                                            </h2>
                                            <h2>
									            <a href="~/User/return_me_single_post/@d.Id">@d.title</a>
								            </h2>
								            <a class="question-report" href="~/User/editPost/@d.Id">Edit</a>
								            <div class="question-type-main"><a href="~/User/deleteLostthing/@d.Id">Delete</a></div>
                                        
								            <div class="question-inner">
									            <div class="clearfix"></div>
									            <p class="question-desc"><br>@d.description</p>
									        
									            <span class="question-date"><i class="icon-time"></i>@d.time</span>
									            <span class="question-comment"><a href="#"><i class="icon-comment"></i>@d.date</a></span>
									            <div class="clearfix"></div>
								            </div>
							            </article>
                                    <a class="button small color signup" href="~/User/deleteLostthing/@d.Id" >Found</a>
                                    }
                                }
                                }
                                else 
                                {
                                    <p>No posts till now</p>
                                }
                            }
						
                           @* @{
                                if(ViewBag.data !=null)
                                {
							        <a href="#" class="load-questions"><i class="icon-refresh"></i>Load More Questions</a>
                                }
                            } *@
					    </div>
					</div>
					
		        </div><!-- End page-content -->
			</div><!-- End main -->
			@*@Html.Partial("_sideBar")*@<!-- End sidebar -->   
		</div><!-- End row -->
	</section><!-- End container -->
	
@Html.Partial("_footer")

</body>
</html>